<h1>Mail epub to kindle</h1>

<%= form_for @task do |f| %>
  <%= render "shared/errors", object: @task %>
  <%= f.label :email, class: "control-label" %>
  <%= f.text_field :email, class: "form-control", placeholder: "Your Kindle mail" %>
  <div class="file-field input-field">
    <div class="btn">
      <span>File</span>
      <%= f.file_field :ebook %>
    </div>
    <div class="file-path-wrapper">
      <input class="file-path validate" type="text" />
    </div>
  </div>
  <%= f.submit "Upload", class: "btn right" %>
<% end %>
